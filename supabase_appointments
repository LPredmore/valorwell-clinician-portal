SELECT 
  a.id AS appointment_id,
  a.client_id,
  c.client_first_name,
  c.client_preferred_name,
  c.client_last_name,
  c.client_email,
  c.client_phone,
  a.clinician_id,
  cl.clinician_first_name,
  cl.clinician_last_name,
  cl.clinician_email,
  cl.clinician_phone,
  a.start_at,
  a.end_at,
  a.type,
  a.status,
  a.notes,
  a.video_room_url,
  a.cpt_code,
  a.diagnosis_code_pointers,
  a.modifiers,
  a.place_of_service_code,
  a.billed_amount,
  a.created_at,
  a.updated_at
FROM appointments a
LEFT JOIN clients c ON a.client_id = c.id
LEFT JOIN clinicians cl ON a.clinician_id = cl.id
ORDER BY a.start_at DESC;
